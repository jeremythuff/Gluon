{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "listEmittedFiles": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "pretty": true,
        "target":"ES5",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "baseUrl": "./src/typescript/",
        "rootDir": "./src/typescript/game/"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}