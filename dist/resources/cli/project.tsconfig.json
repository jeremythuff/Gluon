{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "listEmittedFiles": true,
        "listFiles": false,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "pretty": true,
        "target":"ES5",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "baseUrl": "./src/typescript/game/",
        "rootDir": "./src/typescript/game/"
    },
    "include": [
        "src/typescript/**/*.ts",
        "src/test/**/*.ts"       
    ],
    "exclude": [
        "node_modules"
    ]
}