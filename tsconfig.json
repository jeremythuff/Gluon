{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
    	"outDir": "dist",
    	"declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "listEmittedFiles": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "pretty": true,
        "target":"ES5",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "baseUrl": "./src/typescript/"
    },
    "files": [
        "src/typescript/engine/main.ts",
        "src/typescript/engine/util/io/AbstractControlDevice.ts",
        "src/typescript/launcher/Launcher.ts",
        "src/typescript/cli/GluonCli.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}