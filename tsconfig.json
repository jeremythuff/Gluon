{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
    	"outDir": "dist",
    	"declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "listEmittedFiles": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "pretty": true,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "baseUrl": "./src/typescript/",
        "types": [ "node", "mocha"]
    },
    "include": [
        "src/typescript/**/*.ts",
        "src/test/**/*.ts"       
    ],
    "exclude": [
        "node_modules"
    ]
}